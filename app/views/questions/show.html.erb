
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<h1><%= @question.title %></h1>

<h3>Description: </br>
<%= @question.description %> </h3>

<h3>Answers:</h3>
  <% if @answers.empty? %>
    <p>No one has answered me! Maybe you can?</p>
  <% else %>
  <ul>
    <% @answers.order(:created_at).each do |answer| %>
      <li><%= answer.body %></li>
    <% end %>
  </ul>
  <% end %>

<%= render 'answers/form', answer: @answer %>
<br/>
<%= link_to 'Back', questions_path %> | <%= link_to 'Submit A Question', new_question_path %> | <%= link_to "Edit this Question", edit_question_path(@question) %> | <%= link_to "Delete this Question", @question, method: :delete, data: { confirm: 'Are you sure?' } %>
